{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },

  "extends": "eslint:recommended",

  "rules": {
    "no-console": 0,
    "valid-jsdoc": 2,
    "valid-typeof": 2,

    "block-scoped-var": 2,
    "eqeqeq": [2, "smart"],
    "dot-notation": 2,

    "no-shadow": 2,

    "block-spacing": [2, "always"],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": 2,
    "comma-spacing": 2,
    "func-names": 2,
    "indent": [2, 2],
    "no-trailing-spaces": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],

    "no-const-assign": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": 2,
    "prefer-template": 2
  }
}
